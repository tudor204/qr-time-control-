rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar para verificar si el usuario es administrador vía Custom Claims
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'ADMIN';
    }

    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Un usuario solo puede leer su propio perfil, los admins leen todos
      allow read: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Permitir creación propia durante el registro
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Solo los administradores pueden actualizar perfiles (ej. vacaciones, roles)
      allow update: if request.auth != null && isAdmin();
      
      // Solo los administradores pueden borrar usuarios
      allow delete: if request.auth != null && isAdmin();
    }

    // Reglas para la colección de registros (asistencia)
    match /records/{recordId} {
      // Los empleados solo leen sus propios registros. Admins leen todos.
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Los empleados solo pueden CREAR registros para sí mismos
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // IMPORTANTE: Los empleados NO pueden editar ni borrar registros una vez creados
      allow update, delete: if request.auth != null && isAdmin();
    }

    // Reglas para la colección de ausencias
    match /absences/{absenceId} {
      // Los empleados solo leen sus propias ausencias. Admins leen todas.
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || isAdmin());
      
      // Los empleados solo pueden CREAR ausencias para sí mismos
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // Solo los administradores pueden borrar ausencias (opcionalmente)
      allow update, delete: if request.auth != null && isAdmin();
    }
  }
}
